<h1>My Tasks</h1>

<body>
  <div>
    <ul class="check">
      <% @tasks.each do |task| %>
      <li>
        <%= check_box_tag(:completed, 1 , task.completed, disabled: true) %>
      <%= link_to task.title, task_path(task) %>
      </li>
      <% end %>
    </ul>
    <%= link_to "Add a new task", new_path %>
  </div>
</body>

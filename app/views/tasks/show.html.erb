<h1><%= @task.title %></h1>
<div>
<p><%= @task.details %></p>
<p><%= check_box_tag(:completed, 1, @task.completed, disabled: true) %>
<%= @task.completed? ? "This task is completed" : "This task is not compeleted" %></p>
<p><%= link_to "Delete", destroy_path(@task), method: :delete, data: { confirm: "Are you sure?" } %></p>
</div>
<%= link_to "Back to list", tasks_path %>
<br>
<%= link_to "Go to edit", edit_path(@task) %>
